    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const definitions = [
                { term: 'İnternet Haber Sitesi', definition: 'İnternet ortamında, belirli aralıklarla haber veya yorum niteliğinde yazılı, görsel veya işitsel içeriklerin sunumunu yapmak üzere kurulan ve işletilen süreli yayın. (Md. 2/m)' },
                { term: 'Süreli Yayın', definition: 'Belli aralıklarla yayımlanan gazete, dergi gibi basılmış eserler ile haber ajansları yayınlarını ve internet haber sitelerini ifade eder. (Md. 2/c)' },
                { term: 'Eser Sahibi', definition: 'Süreli veya süresiz yayının içeriğini oluşturan yazıyı veya haberi yazanı, çevireni veya resmi ya da karikatürü yapanı, görsel veya işitsel içerikleri kaydeden veya düzenleyeni ifade eder. (Md. 2/ı)' },
                { term: 'Sorumlu Müdür', definition: 'Her süreli yayının yasal sorumluluğunu taşıyan, kanunda belirtilen şartlara sahip gerçek kişi. (Md. 5)' },
                { term: 'Yayımcı', definition: 'Bir eseri basılmış eser durumuna getirip yayımlayan gerçek veya tüzel kişi. (Md. 2/j)' },
                { term: 'Basın Özgürlüğü', definition: 'Bilgi edinme, yayma, eleştirme, yorumlama ve eser yaratma haklarını içerir. Demokratik toplum gerekleriyle sınırlanabilir. (Md. 3)' }
            ];

            const grid = document.getElementById('definitions-grid');
            let definitionsHTML = '';
            definitions.forEach(d => {
                definitionsHTML += `
                <div class="card p-6 cursor-pointer">
                    <h3 class="font-semibold text-xl mb-2 text-blue-600">${d.term}</h3>
                    <div class="definition text-gray-600 hidden">${d.definition}</div>
                </div>
                `;
            });
            grid.innerHTML = definitionsHTML;

            // Event Delegation for definition cards
            grid.addEventListener('click', (event) => {
                const card = event.target.closest('.card');
                if (card) {
                    card.querySelector('.definition').classList.toggle('hidden');
                }
            });
            
            // Search Functionality
            const searchInput = document.getElementById('searchInput');
            const allSearchableElements = document.querySelectorAll('main h1, main h2, main h3, main h4, main p, main li, main .card');

            allSearchableElements.forEach(el => {
                el.dataset.originalHtml = el.innerHTML;
            });
            
            searchInput.addEventListener('input', () => {
                const query = searchInput.value.trim();

                allSearchableElements.forEach(el => {
                    el.innerHTML = el.dataset.originalHtml; // Restore original content
                });

                if (query.length > 2) {
                    const regex = new RegExp(query, 'gi');
                    allSearchableElements.forEach(el => {
                        // Avoid replacing HTML inside the chart container
                        if (!el.querySelector('canvas')) {
                            const newHtml = el.innerHTML.replace(regex, (match) => `<mark class="bg-yellow-200 rounded">${match}</mark>`);
                            if (newHtml !== el.innerHTML) {
                                el.innerHTML = newHtml;
                            }
                        }
                    });
                }
            });
            
            const ctx = document.getElementById('davaSureleriChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['İnternet Haber Siteleri & Günlük Yayınlar', 'Diğer Basılmış Eserler'],
                    datasets: [{
                        label: 'Dava Açma Süresi (Ay)',
                        data: [4, 6],
                        backgroundColor: [
                            'rgba(59, 130, 246, 0.7)',
                            'rgba(249, 115, 22, 0.7)'
                        ],
                        borderColor: [
                            'rgba(59, 130, 246, 1)',
                            'rgba(249, 115, 22, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Ceza Davaları İçin Azami Dava Açma Süreleri (Madde 26)',
                            font: {
                                size: 16
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return ` Süre: ${context.raw} ay`;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Süre (Ay)'
                            }
                        }
                    }
                }
            });

            const navLinks = document.querySelectorAll('.nav-link');
            const sections = document.querySelectorAll('section');

            window.addEventListener('scroll', () => {
                let current = '';
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    if (pageYOffset >= sectionTop - 100) {
                        current = section.getAttribute('id');
                    }
                });
                
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href').includes(current)) {
                        link.classList.add('active');
                    }
                });
            });
        });
    </script>
</body>
</html>


